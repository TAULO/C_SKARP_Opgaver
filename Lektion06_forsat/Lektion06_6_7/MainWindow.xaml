<Window x:Class="Lektion06_6_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion06_6_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StatusBar DockPanel.Dock="Top">
                <StatusBarItem>
                    <TextBlock x:Name="statusBar"></TextBlock>
                </StatusBarItem>
            </StatusBar>
            <Menu x:Name="menu">
                <MenuItem x:Name="file" Header="File" Click="ShowNameOfMenu">
                    <MenuItem x:Name="open" Header="Open"></MenuItem>
                    <MenuItem x:Name="save" Header="Save as..."></MenuItem>
                    <MenuItem x:Name="exit" Header="Exit"></MenuItem>
                </MenuItem>
                <MenuItem x:Name="help" Header="Help" Click="ShowNameOfMenu">
                    <MenuItem x:Name="about" Header="About"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
